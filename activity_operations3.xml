<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    tools:context=".Operations3">

    <TextView
        android:id="@+id/titleo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginTop="50dp"
        android:background="@color/darkblue"
        android:text="Operatii cu variabile"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="247dp"
        android:layout_height="165dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="18dp"
        android:text="      Noi vom studia impreuna OPERATIILE CU NUMERE ( intregi sau reale ). \n       Acestea se numesc operatii aritmetice iar mai jos vei vedea o lista cu OPERATORII ARITMETICI pe care ii vom folosi."
        android:textColor="@color/darkblue"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleo3" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="143dp"
        android:layout_height="139dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toEndOf="@+id/textView22"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/robot2" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="390dp"
        android:layout_height="176dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        app:srcCompat="@drawable/operatori" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:background="#ff0000"
        android:text="OBSERVATII!"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView14" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="372dp"
        android:layout_height="132dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="18dp"
        android:text=" - adunarea, scaderea si impartirea intre un numar intreg si unul real vor avea ca rezultat un numar real \n  - numerele reale se scriu pe calculator cu punct nu cu virgula ca pe foaie!! \n  - NU PUTEM IMPARTI LA ZERO!!"
        android:textColor="@color/darkblue"
        android:textSize="17dp"
        android:textStyle="italic|bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView42" />

    <Button
        android:id="@+id/nexto3"
        android:layout_width="147dp"
        android:layout_height="52dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="10dp"
        android:text="Urmatorul"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/backo3"
        app:layout_constraintTop_toBottomOf="@+id/textView43" />

    <Button
        android:id="@+id/backo3"
        android:layout_width="113dp"
        android:layout_height="51dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="10dp"
        android:text="Inapoi"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView43" />
</androidx.constraintlayout.widget.ConstraintLayout>