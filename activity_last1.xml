<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    tools:context=".Last1">

    <TextView
        android:id="@+id/titlel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="70dp"
        android:background="@color/darkblue"
        android:text="Structuri repetitive"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView64"
        android:layout_width="340dp"
        android:layout_height="196dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="37dp"
        android:text="      Pana acum am vazut cum functioneaza instructiunea if care poarta numele de Structura decizionala ( se ia o decizie si in functie de rezultat se intampla o actiune ). \n       Acum vom vedea cum functioneaza ~ Structurile repetitive ~ ( repetarea aceleiasi operatii de mai multe ori - cat timp o conditie este implinita. ). "
        android:textColor="@color/darkblue"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlel1" />

    <TextView
        android:id="@+id/textView65"
        android:layout_width="195dp"
        android:layout_height="133dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:text="In C++ recunoastem doua tipuri de structuri repetitive: \n    - FOR \n    - WHILE"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView64" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="162dp"
        android:layout_height="153dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/textView65"
        app:layout_constraintTop_toBottomOf="@+id/textView64"
        app:srcCompat="@drawable/robot2" />

    <Button
        android:id="@+id/backl1"
        android:layout_width="125dp"
        android:layout_height="58dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="116dp"
        android:text="Inapoi"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView65" />

    <Button
        android:id="@+id/nextl1"
        android:layout_width="140dp"
        android:layout_height="62dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="105dp"
        android:text="Urmatorul"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/backl1"
        app:layout_constraintTop_toBottomOf="@+id/imageView22" />
</androidx.constraintlayout.widget.ConstraintLayout>