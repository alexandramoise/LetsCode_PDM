<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    tools:context=".Introduction7">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="346dp"
        android:layout_height="59dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="70dp"
        android:background="@color/darkblue"
        android:text="Citirea de la tastatura si afisarea pe ecran"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="375dp"
        android:layout_height="156dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="21dp"
        android:text="Doua lucruri ai de retinut: \n - pentru citire folosim instructiunea CIN urmata de doua simboluri &gt; \n - pentru afisare folosim COUT urmata de doua simboluri &lt;"
        android:textColor="@color/darkblue"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="328dp"
        android:layout_height="112dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="25dp"
        android:text="Exemplu practic: afisam pe ecran un mesaj - scrie un text scurt, vei vedea rezultatul dupa ce apesi pe buton. \n \n"
        android:textSize="22dp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <EditText
        android:id="@+id/input"
        android:layout_width="222dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="text"
        android:text="ceva"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/ecran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="16dp"
        android:text="ECRAN:"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <Button
        android:id="@+id/cout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="2dp"
        android:text="Afiseaza!"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/button9"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="102dp"
        android:layout_height="63dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        app:srcCompat="@drawable/cout" />

    <Button
        android:id="@+id/button8"
        android:layout_width="112dp"
        android:layout_height="53dp"
        android:layout_marginStart="10dp"
        android:text="Inapoi"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cout" />

    <Button
        android:id="@+id/button9"
        android:layout_width="130dp"
        android:layout_height="56dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="140dp"
        android:text="Urmatorul"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/input" />
</androidx.constraintlayout.widget.ConstraintLayout>