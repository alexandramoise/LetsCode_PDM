<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    tools:context=".Introduction10">

    <TextView
        android:id="@+id/title10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginTop="76dp"
        android:background="@color/darkblue"
        android:text="Declarare variabile"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="148dp"
        android:layout_height="120dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/title10"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/robot2" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="361dp"
        android:layout_height="175dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="Pentru a folosi variabile in programul nostru, trebuie sa le DECLARAM. \n Acest lucru se face scriind TIPUL variabilei ( o sa vorbim despre tipuri de date putin mai tarziu ) urmat de NUMELE variabilei (  un nume sugestiv ales de noi )\n si neaparat SA NU UITI DE punct si virgula ; la final de rand!!!"
        android:textColor="@color/darkblue"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <Button
        android:id="@+id/button10"
        android:layout_width="136dp"
        android:layout_height="51dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="52dp"
        android:text="Urmatorul"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/button11"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <Button
        android:id="@+id/button11"
        android:layout_width="126dp"
        android:layout_height="50dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="52dp"
        android:text="Inapoi"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="234dp"
        android:layout_height="35dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:text="ex declarare: int numar ;"
        android:textColor="#ff0000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="371dp"
        android:layout_height="199dp"
        android:layout_marginStart="20dp"
        android:text="\n Aici am declarat o variabila numita ~numar~ ce va fi un numar intreg ( int ). Este important sa stim ca o variabila va putea avea valori doar din multimea permisa de tip, adica pentru variabila noastra vom putea avea doar valori numere intregi (1,2,-1 etc)"
        android:textColor="@color/darkblue"
        android:textSize="20dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView23" />

</androidx.constraintlayout.widget.ConstraintLayout>