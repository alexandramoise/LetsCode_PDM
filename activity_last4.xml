<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    tools:context=".Last4">

    <TextView
        android:id="@+id/titlel4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="63dp"
        android:background="@color/darkblue"
        android:text="While."
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView73"
        android:layout_width="369dp"
        android:layout_height="70dp"
        android:layout_marginStart="25dp"
        android:text="  While ( din engleza = cat timp ): repetarea se intampla cat timp o conditie este indeplinita. \n"
        android:textColor="@color/darkblue"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlel4" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="377dp"
        android:layout_height="107dp"
        android:layout_marginStart="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView73"
        app:srcCompat="@drawable/sintaxawhile" />

    <TextView
        android:id="@+id/textView74"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="exemplu while: afisam numerele de la 1 la 10"
        android:textColor="@color/darkblue"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView25" />

    <TextView
        android:id="@+id/textView75"
        android:layout_width="262dp"
        android:layout_height="110dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="19dp"
        android:background="@color/white"
        android:text="  int numar = 1; \n   while (numar &lt;= 10) { \n     cout &lt;&lt; numar &lt;&lt; endl; \n     numar = numar + 1; \n }"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView74" />

    <TextView
        android:id="@+id/textView76"
        android:layout_width="347dp"
        android:layout_height="116dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:text="OBSERVATII: \n - pentru mai multe linii de scris in bucla folosim acolade { } ( valabil si pentru For ) \n - endl: afiseaza urmatorul numar dedesubt pe linie noua."
        android:textColor="@color/darkblue"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView75" />

    <Button
        android:id="@+id/backl4"
        android:layout_width="115dp"
        android:layout_height="53dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:text="Inapoi"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView76" />

    <Button
        android:id="@+id/nextl4"
        android:layout_width="140dp"
        android:layout_height="58dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:text="Urmatorul"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/backl4"
        app:layout_constraintTop_toBottomOf="@+id/textView76" />
</androidx.constraintlayout.widget.ConstraintLayout>