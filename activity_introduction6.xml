<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    tools:context=".Introduction6">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="87dp"
        android:background="@color/darkblue"
        android:text="Structura unui program C++"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="269dp"
        android:layout_height="204dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/codeblocks" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="353dp"
        android:layout_height="144dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="      Codul nostru va fi scris in locul semnului ... , intre acolade si inainte de &quot;return 0&quot;. \n \n        Hai sa trecem la lucruri serioase, ce zici?"
        android:textColor="@color/darkblue"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <Button
        android:id="@+id/back6"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="68dp"
        android:text="Inapoi"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <Button
        android:id="@+id/next6"
        android:layout_width="131dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="68dp"
        android:text="Urmatorul"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/back6"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />
</androidx.constraintlayout.widget.ConstraintLayout>