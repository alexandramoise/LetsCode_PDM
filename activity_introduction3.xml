<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    tools:context=".Introduction3">

    <TextView
        android:id="@+id/title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="65dp"
        android:background="@color/darkblue"
        android:text="Ce este un limbaj de programare?"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="369dp"
        android:layout_height="195dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="31dp"
        android:text="      Cum am spus anterior, un limbaj de programare descrie un set de indicatii ( instructiuni ) pe care calculatorul le poate intelege, ca si cum pentru a comunica cu cineva care nu intelege limba romana trebuie sa folosesti limba straina vorbita si inteleasa de el."
        android:textColor="@color/darkblue"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title4" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="159dp"
        android:layout_height="144dp"
        android:layout_marginTop="42dp"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:srcCompat="@drawable/robot2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="230dp"
        android:layout_height="216dp"
        android:layout_marginTop="40dp"
        android:text="   Exista sute de limbaje de programare, dar pentru joculetul nostru vom vorbi despre C++. \n Il vom folosi pentru a rezolva diverse operatii matematice, cu siguranta iti va placea sa rezolvi temele la matematica dupa aceea :)"
        android:textColor="@color/darkblue"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/button4"
        android:layout_width="128dp"
        android:layout_height="55dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="22dp"
        android:text="Inapoi"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/button5"
        android:layout_width="140dp"
        android:layout_height="57dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="22dp"
        android:text="UrmÄƒtorul"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />
</androidx.constraintlayout.widget.ConstraintLayout>